{
	"name": "cpp-xtd-syntax",
	"displayName": "C++ Extended Syntax Highlighting",
	"description" : "Alternative & Additional Syntax Highlighting for C++",
	"version": "1.0.0",
	"publisher": "rewrking",
	"repository": {
		"type": "git",
		"url": "https://github.com/rewrking/rew.cpp-xtd-syntax"
	},
	"icon": "icon.png",
	"engines": {
		"vscode": "*"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
				"id": "rc",
				"extensions": [".rc"],
				"aliases": [ "Rc" ]
			},
			{
				"id": "cpp",
				"extensions": [".cppm", ".ixx", ".mpp", ".mxx", ".cpm", ".ccm"]
			}
		],
		"grammars": [
			{
				"language": "c",
				"scopeName": "source.c",
				"path": "./syntaxes/mods/c.json"
			},
			{
				"language": "cpp",
				"scopeName": "source.cpp",
				"path": "./syntaxes/mods/c++.json"
			},
			{
				"language": "objective-c",
				"scopeName": "source.objc",
				"path": "./syntaxes/mods/objective-c.json"
			},
			{
				"language": "objective-cpp",
				"scopeName": "source.objcpp",
				"path": "./syntaxes/mods/objective-c++.json"
			},
			{
				"language": "cpp",
				"scopeName": "source.cpp.xtd",
				"path": "./syntaxes/c++xtd.json"
			},
			{
				"language": "objective-cpp",
				"scopeName": "source.objcpp.xtd",
				"path": "./syntaxes/objective-c++xtd.json"
			},
			{
				"language": "rc",
				"scopeName": "source.rc",
				"path": "./syntaxes/rc.json"
			}
		]
	}
}